<table class="ui table">
  <thead>
    <tr>
      <th>Website</th>
      <th>Link</th>
      <th>Summary</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each bookmark.websites}}
      <tr>
        <td>
          {{title}}
        </td>
        <td>
          <a href="{{link}}" target="_blank" class="ui icon button">{{link}}</a>
        </td>
        <td>
          {{summary}}
        </td>
        <td>
          <a href="/bookmark/{{../bookmark.id}}/deletewebsite/{{id}}" class="ui icon button">
            <i class="icon trash"></i>
          </a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>